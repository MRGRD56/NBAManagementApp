<Window x:Class="NBAManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBAManagement"
        mc:Ignorable="d"
        Title="NBA Management" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Frame Source="/View/Pages/MainScreenPage.xaml" NavigationUIVisibility="Hidden" Grid.RowSpan="2"/>
        <Label Grid.Row="1" Background="#6995C2" Foreground="White" Padding="1" HorizontalContentAlignment="Center" Content="The current season is 2016-2017, and the NBA already has a history of 71 years."/>
    </Grid>

</Window>
