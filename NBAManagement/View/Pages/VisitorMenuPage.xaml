<Page x:Class="NBAManagement.View.Pages.VisitorMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBAManagement.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Visitor Menu">

    <Border Margin="25 50" BorderBrush="LightGray" BorderThickness="1">
        <Grid Margin="120 50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Style="{StaticResource BlueButton}" Width="180" Content="Teams"/>
            <Button Grid.Column="1" Style="{StaticResource BlueButton}" Width="180" Content="Players"/>
            <Button Grid.Row="1" Style="{StaticResource BlueButton}" Width="180" Content="Matchups"/>
            <Button Grid.Column="1" Grid.Row="1" Style="{StaticResource BlueButton}" Width="180" Content="Photos"/>
        </Grid>
    </Border>
</Page>
